#define	DISPLAY_OFF				0xAE

#define SET_LOW_COLUMN_ADDRESS 	0x00
#define SET_HIGH_COLUMN_ADDRESS	0x10
#define SET_START_LINE_ADDRESS	0x40

#define SET_PAGE_ADDRESS		0xB0

#define	CONTRACT_CONTROL		0x81
#define D128					0xFF
#define	REMAP					0xA1
#define NORMAL_DISPLAY			0xA6
#define MUL_RATIO				0xA8
#define	DUTY32_1				0x3F

#define COM_SCAN_DIRECTION		0xC8
#define SET_DIS_OFFSET			0xD3
#define	NO_OFFSET				0x00

#define	CLOCK_DIV				0xD5

#define	AREA_COLOR_MODE_OFF		0xD8

#define	PRE_CHARGE_PERIOD		0xD9

#define	PIN_CONFIG				0xDA

#define	VCOMH					0xDB

#define	CHARG_PUMP_EN			0x8D

#define TURN_ON					0XAF



s32 OLED_SendCMD(XIicPs * iicPs, u8 CMD){
	s32 status;
	u8 Cfg_Ptr[2] = {0x00, CMD};
	status = XIicPs_MasterSendPolled(iicPs, Cfg_Ptr, 2, OLED_ADR);
	if (status != XST_SUCCESS)
	{
		printf("configure register failed! \n");
		return XST_FAILURE;
	}
	usleep(8000);
	return status;
}


#define         MAX_COLUMN	  128
#define         MAX_ROW		  64

s32 OLED_Init(XIicPs * iicPs){
	s32 status;
	status = OLED_SendCMD(iicPs, DISPLAY_OFF);
	status = OLED_SendCMD(iicPs, SET_LOW_COLUMN_ADDRESS);
	status = OLED_SendCMD(iicPs, SET_HIGH_COLUMN_ADDRESS);
	status = OLED_SendCMD(iicPs, SET_START_LINE_ADDRESS);
	status = OLED_SendCMD(iicPs, SET_PAGE_ADDRESS);
	status = OLED_SendCMD(iicPs, CONTRACT_CONTROL);
	status = OLED_SendCMD(iicPs, D128);
	status = OLED_SendCMD(iicPs, REMAP);
	status = OLED_SendCMD(iicPs, NORMAL_DISPLAY);

	status = OLED_SendCMD(iicPs, MUL_RATIO);
	status = OLED_SendCMD(iicPs, DUTY32_1);
	status = OLED_SendCMD(iicPs, COM_SCAN_DIRECTION);
	status = OLED_SendCMD(iicPs, SET_DIS_OFFSET);
	status = OLED_SendCMD(iicPs, NO_OFFSET);

	status = OLED_SendCMD(iicPs, CLOCK_DIV);
	status = OLED_SendCMD(iicPs, 0x80);

	status = OLED_SendCMD(iicPs, AREA_COLOR_MODE_OFF);
	status = OLED_SendCMD(iicPs, 0x05);

	status = OLED_SendCMD(iicPs, PRE_CHARGE_PERIOD);
	status = OLED_SendCMD(iicPs, 0xF1);

	status = OLED_SendCMD(iicPs, PIN_CONFIG);
	status = OLED_SendCMD(iicPs, 0x12);

	status = OLED_SendCMD(iicPs, VCOMH);
	status = OLED_SendCMD(iicPs, 0x30);

	status = OLED_SendCMD(iicPs, CHARG_PUMP_EN);
	status = OLED_SendCMD(iicPs, 0x14);
	status = OLED_SendCMD(iicPs, TURN_ON);
	return status;
}

s32 OLED_SendData(XIicPs * iicPs, u8 data)
{
	s32 status;
	u8 Cfg_Ptr[2] = {0x40, data};
	status = XIicPs_MasterSendPolled(iicPs, Cfg_Ptr, 2, OLED_ADR);
	if (status != XST_SUCCESS)
	{
		printf("configure register failed! \n");
		return XST_FAILURE;
	}
	usleep(8000);
	return status;
}

s32 OLED_SetPos(XIicPs * iicPs, u8 x, u8 y){
	s32 status;
	status = OLED_SendCMD(iicPs, 0xb0+y);
	status = OLED_SendCMD(iicPs, ((x&0xf0)>>4)|0x10);
	status = OLED_SendCMD(iicPs, (x&0x0f));
	return status;
}

s32 OLED_DisplayOn(XIicPs * iicPs){
	s32 status;
	status = OLED_SendCMD(iicPs, 0x8D);
	status = OLED_SendCMD(iicPs, 0x14);
	status = OLED_SendCMD(iicPs, 0xAF);
	return status;
}

s32 OLED_Clear(XIicPs * iicPs){
	u8 i, n;
	for(i=0;i<8;i++){
		OLED_SendCMD(iicPs, 0xb0+i);
		OLED_SendCMD(iicPs, 0x00);
		OLED_SendCMD(iicPs, 0x10);
		for(n=0;n<128;n++){
			OLED_SendData(iicPs, 0);
		}
	}
}

//在指定位置显示一个字符,包括部分字符
//x:0~127，y:0~7
//Char_Size:选择字体 16/12
void OLED_ShowChar(XIicPs * iicPs, u8 x,u8 y,u8 chr,u8 Char_Size)
{
	unsigned char c=0,i=0;
	c=chr-' ';//得到偏移后的值
	if(x>MAX_COLUMN-1)
	{
		x=0;
		y=y+2;
	}
	if(Char_Size ==16)
	{
		OLED_SetPos(iicPs, x,y);
		for(i=0;i<8;i++)
		{
			OLED_SendData(iicPs, F8X16[c*16+i]);//先写上半部分
		}
		OLED_SetPos(iicPs, x,y+1);
		for(i=0;i<8;i++)
		{
			OLED_SendData(iicPs, F8X16[c*16+i+8]);//后写下半部分
		}
	}
	else
	{
		OLED_SetPos(iicPs, x,y);
		for(i=0;i<6;i++)
		{
			OLED_SendData(iicPs, F6x8[c][i]);
		}
	}
}

void OLED_ShowCN(XIicPs * iicPs, u8 x,u8 y,u8 index)
{
  u8 t;

  OLED_SetPos(iicPs,x,y);
  for(t=0;t<16;t++)
  {
	  OLED_SendData(iicPs, Hzk[index][t]);
  }

  OLED_SetPos(iicPs, x,y+1);
  for(t=0;t<16;t++)
  {
	  OLED_SendData(iicPs, Hzk[index][t+16]);
  }
}

//显示一个字符串
void OLED_ShowString(XIicPs * iicPs, u8 x,u8 y,char *str,u8 Char_Size)
{
  unsigned char j=0;

  while (str[j]!='\0')
  {
    OLED_ShowChar(iicPs, x,y,str[j],Char_Size);
    x+=8;
    if(x>120)
    {
      x=0;
      y+=2;
    }
    j++;//移动一次就是一个page，取值0-7
  }
}

s32 OLED_SendCmdCo(XIicPs * iicPs, u8 * cmd, unsigned int len)
{
	s32 status;
	status = XIicPs_MasterSendPolled(iicPs, cmd, len, OLED_ADR);
	if (status != XST_SUCCESS)
	{
		printf("configure register failed! \n");
		return XST_FAILURE;
	}
	usleep(8000);
	return status;
}

s32 writeReg(XIicPs * iicPs, u16 slaveAddr, u8 * Cfg_Ptr)
{
	s32 status ;
	//IIC写入数据，从机地址，寄存器地址和写入的数据
	status = XIicPs_MasterSendPolled(iicPs, Cfg_Ptr, 2, slaveAddr);
	if (status != XST_SUCCESS)
	{
		printf("configure register failed! \n");
		return XST_FAILURE;
	}
	//两次IIC写入之间保持一定间隔
	usleep(8000);
	return status;
}
